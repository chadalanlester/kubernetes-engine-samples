// --- START: PASTE YOUR VALUES HERE ---

// 1. Your Kubernetes Server URL
def K8S_SERVER = "https://10.10.0.201:6443" 

// 2. Your Kubernetes CA Cert (as a Base64 string)
def K8S_CA_CERT = ""

// 3. Your Docker Hub username
def DOCKER_IMAGE = "chadlester71/hello-app"

// --- END: PASTE YOUR VALUES HERE ---

pipeline {
    agent {
        kubernetes {
            namespace 'cicd'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              # Container 1: Kaniko for building
              - name: kaniko
                image: gcr.io/kaniko-project/executor:v1.12.1-debug
                command:
                - /bin/sh
                - -c
                args:
                - cat
                tty: true
                volumeMounts:
                - name: workspace
                  mountPath: /workspace

              volumes:
              - name: workspace
                emptyDir: {}
            """
        }
    }
    stages {
        // Stage 1: Checkout
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Stage 2: Build & Push
        stage('Build & Push') {
            steps {
                container('kaniko') {
                    script {
                        withEnv([
                            "DESTINATION_IMAGE=${DOCKER_IMAGE}:${env.BUILD_NUMBER}"
                        ]) {
                            withCredentials([usernamePassword(credentialsId: 'docker-hub-token', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                                sh '''
                                echo "{\\"auths\\":{\\"https://index.docker.io/v1/\\":{\\"auth\\":\\"$(echo -n ${DOCKER_USER}:${DOCKER_PASS} | base64)\\"}}}" > /kaniko/.docker/config.json
                                
                                /kaniko/executor --dockerfile=Dockerfile --destination=${DESTINATION_IMAGE} --context=quickstarts/hello-app
                                '''
                            }
                        }
                    }
                }
            }
        }

        // Stage 3: Deploy
        stage('Deploy') {
            steps {
                script {
                    // Step 3a: Update the image tag in the manifest
                    withEnv(["DESTINATION_IMAGE=${DOCKER_IMAGE}:${env.BUILD_NUMBER}"]) {
                        sh "sed -i 's|image:.*|image: ${DESTINATION_IMAGE}|' \${WORKSPACE}/quickstarts/hello-app/k8s/deployment.yaml"
                    }
                    
                    // FIXED: Decode the Base64 cert string into raw PEM text
                    def decodedCaCert = new String(K8S_CA_CERT.decodeBase64(), 'UTF-8')

                    // Step 3b: Download, configure, and use kubectl
                    withKubeConfig([
                        credentialsId: 'jenkins-k8s-token',
                        serverUrl: K8S_SERVER,
                        // FIXED: Pass the DECODED cert to the plugin
                        caCertificate: decodedCaCert
                    ]) {
                        sh """
                        echo "--- Downloading kubectl ---"
                        curl -LO "https://dl.k8s.io/release/v1.29.5/bin/linux/amd64/kubectl"
                        chmod +x ./kubectl
                        
                        echo "--- Applying manifests ---"
                        ./kubectl apply -f \${WORKSPACE}/quickstarts/hello-app/k8s/ -n apps
                        """
                    }
                }
            }
        }
    }
}
