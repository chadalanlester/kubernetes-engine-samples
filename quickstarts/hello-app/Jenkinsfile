// --- START: PASTE YOUR VALUES HERE ---

// 1. REPLACE with your server URL
def K8S_SERVER = "https://10.10.0.201:6443" 

// 2. REPLACE with your long base64 CA cert string
def K8S_CA_CERT = ""

// 3. REPLACE with your Docker Hub username
def DOCKER_IMAGE = "chadalanlester/hello-app"

// --- END: PASTE YOUR VALUES HERE ---

pipeline {
    // This 'agent' block now tells Jenkins to spin up a
    // new pod in the 'cicd' namespace for this pipeline.
    agent {
        kubernetes {
            // We are defining the build-pod "template" right here.
            // It will be created in the same namespace as Jenkins.
            namespace 'cicd'
            yaml """
            apiVersion: v1
            kind: Pod
            spec:
              containers:
              # Container 1: Kaniko for building
              - name: kaniko
                image: gcr.io/kaniko-project/executor:v1.12.1-debug
                command:
                - /bin/sh
                - -c
                args:
                - cat
                tty: true
                volumeMounts:
                - name: workspace
                  mountPath: /workspace

              # Container 2: Kubectl for deploying
              - name: kubectl
                image: bitnami/kubectl:latest
                command:
                - /bin/sh
                - -c
                args:
                - cat
                tty: true
                volumeMounts:
                - name: workspace
                  mountPath: /workspace

              volumes:
              - name: workspace
                emptyDir: {}
            """
        }
    }
    stages {
        // Stage 1: Checkout
        // This runs in the default 'jnlp' container in our pod
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        // Stage 2: Build & Push
        stage('Build & Push') {
    container('kaniko') {
        script {
            withCredentials([string(credentialsId: 'docker-hub-creds', variable: 'DOCKER_CREDS')]) {
                sh '''
                echo "{\\"auths\\":{\\"https://index.docker.io/v1/\\":{\\"auth\\":\\"$(echo -n ${DOCKER_CREDS} | base64)\\"}}}" > /kaniko/.docker/config.json
                /kaniko/executor --dockerfile=Dockerfile --destination=${DOCKER_IMAGE_NAME}:${COMMIT_SHA} --context=.
                '''
            }
        }
    }
}

        // Stage 3: Deploy
        stage('Deploy') {
            steps {
                // We run these steps in the 'kubectl' container
                container('kubectl') {
                    script {
                        // We use 'withKubeconfig' to securely load our
                        // 'jenkins-k8s-token' credential
                        withKubeconfig([
                            credentialsId: 'jenkins-k8s-token',
                            serverUrl: K8S_SERVER,
                            caCertificate: K8S_CA_CERT
                        ]) {
                            // Update the image tag in our manifest
                            sh "sed -i 's|image:.*|image: ${DOCKER_IMAGE}:\${env.BUILD_NUMBER}|' \${WORKSPACE}/quickstarts/hello-app/k8s/deployment.yaml"

                            // Apply our 'k8s' directory to the 'apps' namespace
                            sh "kubectl apply -f \${WORKSPACE}/quickstarts/hello-app/k8s/ -n apps"
                        }
                    }
                }
            }
        }
    }
}
